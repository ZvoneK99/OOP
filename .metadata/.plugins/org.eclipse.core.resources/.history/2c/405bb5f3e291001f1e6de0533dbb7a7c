package Vjezba;

import java.util.ArrayList;

public class Student {
	String ime;
	String prezime;
	String brojIndeksa;
	int godinaStudija;

private ArrayList<Integer> ocjene = new ArrayList<>();

public Student(String ime, String prezime, String brojIndeksa, int godinaStudija) {
	this.ime = ime;
	this.prezime = prezime;
	this.brojIndeksa = brojIndeksa;
	this.godinaStudija = godinaStudija;
}

public void dodajOcjenu(int ocjena) {
	if(ocjena>=1 && ocjena<=5) {
		ocjene.add(ocjena);
		System.out.println("Ocjena: "+ocjena+" je dodana");
	}
	else {
		System.out.println("Ocjena mora biti izmeÄ‘u 1 i 5");
	}
}

public double izracunajProsjek() {
	if (ocjene.isEmpty()) {
		System.out.println("Student nema dodanih ocjena.");
		return 0;
	}
	int suma=0;
	for(int ocjena : ocjene) {
		suma+=ocjena;
	}
	return (double) suma / ocjene.size();
}
public void ispisiInformacije() {
	System.out.println("Ime: "+ime);
	System.out.println("Prezime: "+prezime);
	System.out.println("Broj indeksa: "+brojIndeksa);
	System.out.println("Godina studija: "+godinaStudija);
	
	double prosjek = izracunajProsjek();
	if(prosjek>0) {
		System.out.println("Prosjek ocjena je: "+prosjek);
	}
}

public static void main(String [] args) {
	Student student1 =new Student("Zvone", "Pendic", "1743/rr", 3);
	
	student1.dodajOcjenu(5);
	student1.dodajOcjenu(4);

	
	student1.ispisiInformacije();
	
}
}

