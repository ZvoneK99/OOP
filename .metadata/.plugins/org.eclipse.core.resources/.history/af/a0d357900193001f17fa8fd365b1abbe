package primjer_03;

public class Svjetiljka {
	int baterija;
	boolean ukljucena;
	
	public Svjetiljka(int baterija, boolean ukljucena) {
		this.ukljucena = false;		
	}
	public void ukljuci() {
		if(this.baterija>=5) {
			this.ukljucena = true;
			this.baterija-=5;
			System.out.println("Baterija je ukljucena.");
		}
	}
	public void iskljuci() {
		this.ukljucena = false;
		System.out.println("Baterija je iskljucena.");
	}
	public void napuniBateriju(int postotak) {
		if(this.baterija<100) {
			this.baterija=this.baterija+postotak;
		}
		else if(this.baterija>=100) {
			System.out.println("Baterija je veÄ‡ napunjena.");
		}
	}
	public void provjeriBateriju() {
		System.out.println("Trenutno stanje baterije je: "+this.baterija);
	}
	public static void main(String[] args) {
		Svjetiljka milka = new Svjetiljka(30, true) {
			
		};
		milka.ukljuci();
		milka.napuniBateriju(45);
		milka.ukljuci();
		milka.provjeriBateriju();
	}
}
