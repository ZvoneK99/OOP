//Kreiraj klasu Proizvod te ispisi detalje o proizvodu
//

package Vjezba1;

public class Proizvod {
	String naziv;
	double cijena;
	int kolicina;
	
	public static void promjenaCijene(double novaCijena) {
		if(novaCijena>0) {
			this.cijena = novaCijena;
			System.out.println("Cijena je uspjesno promjenjena na: "+novaCijena+" KM");
		}
		else {
			System.out.println("Cijena mora biti veÄ‡a od 0");
		}
	}
	
	public Proizvod(String naziv, double cijena, int kolicina) {
		this.naziv = naziv;
		this.cijena = cijena;
		this.kolicina = kolicina;
	}
	
	public void ispisiDetaljeProizvoda() {
		System.out.println("Naziv proizvoda je: "+naziv);
		System.out.println("Cijena proizvoda je: "+cijena+ " km"+ (" "));
		System.out.println("Kolicina proizvoda na stanju je: "+kolicina+" komada");
	}
	public static void main(String [] args) {
		Proizvod sok = new Proizvod("CocaCola", 2.50, 1500);
		Proizvod brasno = new Proizvod("Tip 400", 22, 150);
		Proizvod cokolada = new Proizvod("Milka", 6.45, 3542);
		
		sok.ispisiDetaljeProizvoda();
		brasno.ispisiDetaljeProizvoda();
		cokolada.ispisiDetaljeProizvoda();
		cokolada.promjenaCijene(3);
	}
	
}
