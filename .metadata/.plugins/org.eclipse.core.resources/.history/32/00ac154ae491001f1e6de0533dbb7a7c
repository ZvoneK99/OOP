package Vjezba1;

public class Proizvod {
	String naziv;
	double cijena;
	int kolicina;
	
	public Proizvod(String naziv, double cijena, int kolicina) {
		this.naziv = naziv;
		this.cijena = cijena;
		this.kolicina = kolicina;
	}
	
	public void ispisiDetaljeProizvoda() {
		System.out.println("Naziv proizvoda je: "+naziv);
		System.out.println("Cijena proizvoda je: "+cijena+ " km");
		System.out.println("Kolicina proizvoda na stanju je: "+kolicina);
	}
	public static void main(String [] args) {
		Proizvod sok = new Proizvod("CocaCola", 2.50, 1500);
		Proizvod brasno = new Proizvod("Tip 400", 22, 150);
		Proizvod cokolada = new Proizvod("Milka", 6.45, 3542);
		
		sok.ispisiDetaljeProizvoda();
	}
	
}
