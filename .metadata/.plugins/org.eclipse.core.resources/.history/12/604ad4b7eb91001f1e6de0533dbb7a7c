//kreiranje klase BankovniRacun te metoda za uplatu, isplatu i ispisivanjeStanja racuna

package vjezba2;

public class BankovniRacun {
	String brojRacuna;
	double stanje;
	
	public BankovniRacun(String brojRacuna, double stanje) {
		this.brojRacuna = brojRacuna;
		this.stanje = stanje;
	}
	public void uplati(double iznos) {
		this.stanje+=iznos;
		System.out.println("Stanje racuna nakon uplate iznosi: "+stanje + " km");
	}
	public void povuci(double iznos) {
		if(this.stanje>=iznos) {
			this.stanje-=iznos;
			System.out.println("Nakon povlačenja sredstava stanje računa iznosi: "+stanje+ " km");
		}
		else {
			System.out.println("Nemate dovoljno sredstava na računu.");
		}
	}
	public void ispisiStanje() {
		System.out.println("Trenutna količina novca na računu: "+brojRacuna+ " iznosi: "+stanje+ " km");
	}
	
	public static void main(String [] args) {
		BankovniRacun korisnik1 = new BankovniRacun("Zvone", 150);
		
		korisnik1.ispisiStanje();
		korisnik1.uplati(132);
		korisnik1.povuci(32);
	}
}
