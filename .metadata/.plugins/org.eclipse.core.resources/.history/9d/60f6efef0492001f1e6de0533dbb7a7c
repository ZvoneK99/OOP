package primjer_02;

public class MobilniTelefon {
	String marka;
	String model;
	int stanjeBaterije = 0;
	boolean ukljucen;
	
	public MobilniTelefon(String marka, String model, int stanjeBaterije, boolean ukljucen) {
		this.marka = marka;
		this.model = model;
		this.stanjeBaterije = stanjeBaterije;
	}
	
	public void ukljuci() {
		if(stanjeBaterije == 0) {
			this.ukljucen = false;
		}
		else {
			this.ukljucen = true;
			System.out.println("Mobitel je ukljucen.");
		}
		
	}
	
	public void iskljuci()  {
		this.ukljucen = false;
		System.out.println("Mobitel je iskljucen.");
	}
	
	public void nazovi(String broj) {
		if(this.ukljucen == true) {
		}
		else {
			System.out.println("Mobitel mora biti ukljuƒçen kako bi mogli uspostaviti poziv.");
		}
		if(this.stanjeBaterije<=10) {
			System.out.println("Nema dovoljno baterije za pozivanje.");
		}
		else if(this.ukljucen==true && this.stanjeBaterije>10) {
			this.stanjeBaterije -=10;
			System.out.println("Zovem broj.");
		}
	}
	public void napuniBateriju(int postotak) {
		if(postotak<0) {
			System.out.println("Punjenje mora biti s pozitivnim brojem.");
		}
		else {
			this.stanjeBaterije+=postotak;
			System.out.println("Postotak baterije je: "+this.stanjeBaterije);
		}
		if(this.stanjeBaterije>100) {
			this.stanjeBaterije=100;
			System.out.println("Baterija je potpuno napunjena.");
		}
	}
	public int provjeriStanjeBaterije() {
	    System.out.println("Stanje baterije iznosi: "+this.stanjeBaterije);
    	return this.stanjeBaterije;
	}

	public static void main(String [] args) {
		MobilniTelefon tel1 = new MobilniTelefon("Apple", "iPhone", 20, true);
		tel1.ukljuci();
		tel1.napuniBateriju(25);
		tel1.nazovi("063355067");
		tel1.provjeriStanjeBaterije();
	}
	
}
